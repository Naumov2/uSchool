<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="-65dp"
        android:layout_marginTop="-80dp"
        android:src="@drawable/star"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="-25dp"
        android:src="@drawable/main_menu_two"/>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Регитрация пользователя"
        android:fontFamily="@font/bowler"
        android:textAlignment="center"
        android:textColor="@color/cyan"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:entries="@array/function"
        android:id="@+id/function"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/input"
            android:fontFamily="@font/bowler"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:hint="Ваше имя"
            android:textAlignment="center"
            android:id="@+id/name"/>
        <EditText
            android:layout_marginStart="10dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/input"
            android:fontFamily="@font/bowler"
            android:layout_marginTop="30dp"
            android:hint="Ваша фамилия"
            android:textAlignment="center"
            android:id="@+id/surname"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/input"
            android:fontFamily="@font/bowler"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:hint="Ваша почта"
            android:textAlignment="center"
            android:id="@+id/Email"/>
        <EditText
            android:layout_marginStart="10dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/input"
            android:fontFamily="@font/bowler"
            android:layout_marginTop="10dp"
            android:hint="Придумайте пароль"
            android:textAlignment="center"
            android:id="@+id/password"/>
    </LinearLayout>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:entries="@array/number_class"
        android:id="@+id/number_class" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:entries="@array/parallel"
        android:id="@+id/parallel"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:text="Регистрация"
        android:fontFamily="@font/bowler"
        android:textSize="20dp"
        android:id="@+id/login_bt" />
</LinearLayout>
